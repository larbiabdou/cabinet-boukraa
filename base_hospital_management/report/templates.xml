<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_medical_prescription" model="report.paperformat">
        <field name="name">A5 - medical prescription</field>
        <field name="default" eval="True"/>
        <field name="format">A5</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">15</field>
        <field name="dpi">90</field>
    </record>
    <record id="paperformat_a4_without_margin" model="report.paperformat">
        <field name="name">A4 - without margin</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">15</field>
        <field name="dpi">90</field>
    </record>
    <template id="template_header_a5">
        <t t-set="company" t-value="env.company"/>
        <table style="width: 100%; border-collapse: collapse; margin-bottom: 0px;border: transparent;">
            <tr style="vertical-align: top;border: transparent;">
                <!-- Partie gauche - Informations du médecin en français -->
                <td style="width: 37%; padding: 10px; padding-left: 1mm; vertical-align: top; border: none;">
                    <div style="line-height: 1.5;">
                        <div style="font-size: 12px; font-weight: bold; margin-bottom: 3px; font-family: Adobe Devanagari;">
                            <span t-esc="company.doctor_name or 'Dr. Nom du Médecin'"/>
                            <br/>
                            Médecin spécialiste en chirurgie
                            <br/>
                            Orthopédique et traumatologique
                            <br/>
                            CROM No° :
                            <span t-esc="company.doctor_order_number or '000000'"/>
                            <br/>
                            Téléphone :
                            <span t-esc="company.phone"/>
                            <br/>
                            Adresse : Cité CNEP, Bt C20 No° 01
                            <br/>
                            Koléa, wilaya de Tipaza
                        </div>
                    </div>
                </td>

                <td style="width: 30%; text-align: center; vertical-align: top; padding-top: -30px;">
                    <img t-if="company.logo"
                        t-att-src="image_data_uri(company.logo)"
                        style="height: 4cm; width: auto; object-fit: contain; display: inline-block;"
                        alt="Logo Société"/>
                </td>

                <!-- Partie droite - Informations en arabe -->
                <td style="width: 37%; padding: 10px; padding-right: 1mm; vertical-align: top; text-align: right; border: none;" dir="rtl">
                    <div style="line-height: 1.5;">
                        <div style="font-size: 12px; font-weight: bold; margin-bottom: 3px; font-family: Arabic Typesetting;">
                            د. رضـــــــــــا بونــجـــــــــــــــار
                            <br/>
                            طبيب مختص في جراحة العظام
                            <br/>
                            الـمــفــاصـــــــــل و الـكـســـــور
                            <br/>
                            ر.ت.م.أ.ط: 422334
                            <br/>
                            رقم الهاتف: 0559.12.08.47
                            <br/>
                            العنوان: حي CNEP, عمارة C20, رقم 01,
                            <br/>
                            القـلـيـعــــــة، ولايــة تـيـبـــــــازة
                        </div>
                    </div>
                </td>

            </tr>
        </table>

        <!-- Ligne de séparation décorative -->
        <div style="width: 80%; margin: 0 auto; border-bottom: 2px solid #3498db; margin-bottom: 10px;"></div>
        <div style="font-size: 13px; font-weight: bold; margin-top: 5px; font-family: Adobe Devanagari; text-align: right; margin-right: 10mm;" dir="ltr">
            Kolea, le : <span t-esc="date or ''"/>
        </div>

        <div style="font-size: 12px; font-weight: bold; line-height: 1.6;">
            <t t-if="prescription and prescription.prescription_type == 'souche'">
                <!-- Trois colonnes pour ordonnance souche -->

                <!-- Colonne 1 : Nom, Prénom, Âge -->
                <div style="float: left; width: 30%; margin-right: 3%; font-size: 13px;">
                    <div style="margin-bottom: 3px;">
                        <span style="font-weight: bold;">Nom :</span>
                        <span style="font-weight: normal;" t-esc="lastname or ''"/>
                    </div>
                    <div style="margin-bottom: 3px;">
                        <span style="font-weight: bold;">Prénom :</span>
                        <span style="font-weight: normal;" t-esc="firstname or ''"/>
                    </div>
                    <div style="margin-bottom: 3px;">
                        <span style="font-weight: bold;">Âge :</span>
                        <span style="font-weight: normal;" t-esc="age or ''"/>
                    </div>
                </div>

                <!-- Colonne 2 : Poids, Taille, Sexe -->
                <div style="float: left; width: 30%; margin-right: 3%; font-size: 13px;">
                    <div style="margin-bottom: 3px;">
                        <strong>Poids :</strong>
                        <span t-esc="poids or ''"/>
                    </div>
                    <div style="margin-bottom: 3px;">
                        <strong>Taille :</strong>
                        <span t-esc="taille or ''"/>
                    </div>
                    <div style="margin-bottom: 3px;">
                        <strong>Sexe :</strong>
                        <span t-esc="gender or ''"/>
                    </div>
                </div>

                <!-- Colonne 3 : Adresse, CIN -->
                <div style="float: left; width: 34%; font-size: 13px;">
                    <div style="margin-bottom: 3px;">
                        <strong>Adresse :</strong>
                        <span t-esc="address or ''"/>
                    </div>
                    <div style="margin-bottom: 3px;">
                        <strong>CIN :</strong>
                        <span t-esc="cin or ''"/>
                    </div>
                </div>

            </t>
            <t t-else="">
                <!-- Deux colonnes pour les autres types d'ordonnance -->

                <!-- Colonne gauche -->
                <div style="float: left; width: 48%; margin-right: 4%; font-size: 13px;">
                    <div style="margin-bottom: 3px;">
                        <strong>Nom :</strong>
                        <span t-esc="lastname or ''"/>
                    </div>
                    <div style="margin-bottom: 3px;">
                        <strong>Prénom :</strong>
                        <span t-esc="firstname or ''"/>
                    </div>
                    <div style="margin-bottom: 3px;">
                        <strong>Âge :</strong>
                        <span t-esc="age or ''"/>
                    </div>
                </div>

            </t>

            <!-- Clear float -->
            <div style="clear: both;"></div>
        </div>
    </template>

    <template id="template_footer_a5">
        <t t-set="company" t-value="env.company"/>
        <div t-attf-class="footer">
            <!-- Ligne décorative -->
            <div style="width: 80%; margin: 0 auto; border-bottom: 2px solid #3498db; margin-bottom: 10px;"></div>
            <div style="width: 80%; margin: 10px auto; font-size: 12px; font-weight: bold; color: #3208cdff; font-family: Arial, sans-serif;">
                <span style="display: block; text-align: justify;">
                    Pour votre santé, suivez rigoureusement les prescriptions et respectez les
                    <span style="display:inline-block; width:100%;"></span>
                </span>
                <span style="display: block; text-align: center; font-weight: bold; color: #2f05c9ff;">
                    consignes pour une récupération optimale
                </span>
            </div>
        </div>

    </template>
</odoo>