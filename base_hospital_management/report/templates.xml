<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_medical_prescription" model="report.paperformat">
        <field name="name">A5 - medical prescription</field>
        <field name="default" eval="True"/>
        <field name="format">A5</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">15</field>
        <field name="dpi">90</field>
    </record>
    <record id="paperformat_a4_without_margin" model="report.paperformat">
        <field name="name">A4 - without margin</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">15</field>
        <field name="dpi">90</field>
    </record>
    <template id="template_header_a5">
        <t t-set="company" t-value="env.company"/>
        <table style="width: 100%; border-collapse: collapse; margin-bottom: 0; border: transparent !important;">
            <tr style="vertical-align: top; border: transparent !important;">
                
                <!-- Partie gauche - Informations du médecin en français -->
                <td style="width: 35%; padding: 5px 10px 5px 2mm; vertical-align: top; border: transparent !important;">
                    <div style="line-height: 1.7;">
                        <div style="font-size: 13px; line-height: 2; font-family: Garamond; font-weight: bold;">
                            <span t-esc="company.doctor_name or 'Dr. Nom du Médecin'"/>
                            <br/>
                            Médecin spécialiste en chirurgie
                            <br/>
                            Orthopédique et traumatologique
                            <br/>
                            CROM N° :
                            <span t-esc="company.doctor_order_number or '000000'"/>
                            <br/>
                            Téléphone :
                            <span t-esc="company.phone"/>
                            <br/>
                            Adresse : Cité CNEP, Bt C20 N° 01
                            <br/>
                            Koléa, wilaya de Tipaza
                        </div>
                    </div>
                </td>

                <!-- Logo centré -->
                <td style="width: 30%; text-align: center; vertical-align: middle; border: transparent !important;">
                    <img t-if="company.logo"
                        t-att-src="image_data_uri(company.logo)"
                        style="height: 4cm; width: auto; object-fit: contain; display: block; margin: 0 auto;"
                        alt="Logo Société"/>
                </td>

                <!-- Partie droite - Informations en arabe -->
                <td style="width: 35%; padding: 5px 2mm 5px 10px; vertical-align: top; text-align: right; border: transparent !important;" dir="rtl">
                    <div style="line-height: 1.5;">
                        <div style="font-size: 16px; font-weight: bold; line-height: 1.65; font-family: 'Arabic Typesetting';">
                            د. رضـــــــــــا بونــجـــــــــــــــار
                            <br/>
                            طبيب مختص في جراحة العظام
                            <br/>
                            الـمــفــاصـــــــــل و الـكـســـــور
                            <br/>
                            ر.ت.م.أ.ط: 422334
                            <br/>
                            رقم الهاتف: 0559.12.08.47
                            <br/>
                            العنوان: حي CNEP, عمارة C20, رقم 01,
                            <br/>
                            القـلـيـعــــــة، ولايــة تـيـبـــــــازة
                        </div>
                    </div>
                </td>

            </tr>
        </table>


        <!-- Ligne de séparation décorative -->
        <div style="width: 80%; margin: 0 auto; border-bottom: 2px solid #3498db; margin-bottom: 10px;"></div>
        <div style="font-size: 13px; font-weight: bold; margin-top: 5px; font-family: Garamond; text-align: right; margin-right: 10mm;" dir="ltr">
            Koléa, le : <span t-esc="date or ''"/>
        </div>
        <br/>
        <!-- Bloc infos patient -->
        <div style="font-size: 12px; font-weight: bold; margin-top: 10px;">
            <t t-if="prescription and prescription.prescription_type == 'souche'">
                <!-- Cas 1 : Ordonnance souche (3 colonnes) -->
                <table style="width: 100%; border-collapse: collapse; margin-top: 5px; font-size: 13px;border: transparent !important">
                    <tr style="border: transparent !important;">
                        <!-- Colonne 1 -->
                        <td style="width: 33%; padding: 3px;border: transparent !important">
                            <div><strong>Nom :</strong> <span t-esc="lastname or ''"/></div>
                            <div><strong>Prénom :</strong> <span t-esc="firstname or ''"/></div>
                            <div><strong>Âge :</strong> <span t-esc="age or ''"/></div>
                        </td>

                        <!-- Colonne 2 -->
                        <td style="width: 30%; padding: 3px;border: transparent !important">
                            <div><strong>Poids :</strong> <span t-esc="poids or ''"/> kg</div>
                            <div><strong>Taille :</strong> <span t-esc="taille or ''"/> cm</div>
                            <div><strong>Sexe :</strong> <span t-esc="gender or ''"/></div>
                        </td>

                        <!-- Colonne 3 -->
                        <td style="width: 37%; padding: 3px;border: transparent !important">
                            <div><strong>Adresse :</strong> <span t-esc="address or ''"/></div>
                            <div><strong>N° CIN :</strong> <span t-esc="cin or ''"/></div>
                        </td>
                    </tr>
                </table>
            </t>

            <t t-else="">
                <!-- Cas 2 : Autres types d’ordonnance (2 colonnes) -->
                <table style="width: 100%; border-collapse: collapse; margin-top: 5px; font-size: 12px;border: transparent !important;">
                    <tr>
                        <!-- Colonne gauche -->
                        <td style="width: 50%; padding: 3px;border: transparent !important;">
                            <div><strong>Nom :</strong> <span t-esc="lastname or ''"/></div>
                            <div><strong>Prénom :</strong> <span t-esc="firstname or ''"/></div>
                            <div><strong>Âge :</strong> <span t-esc="age or ''"/></div>
                        </td>

                        <!-- Colonne droite -->
                        <td style="width: 50%; padding: 3px;border: transparent !important;">
                            <div><strong>Adresse :</strong> <span t-esc="address or ''"/></div>
                            <div><strong>CIN :</strong> <span t-esc="cin or ''"/></div>
                        </td>
                    </tr>
                </table>
            </t>
        </div>

    </template>

    <template id="template_footer_a5">
        <t t-set="company" t-value="env.company"/>
        <div t-attf-class="footer">
            <!-- Ligne décorative -->
            <div style="width: 80%; margin: 0 auto; border-bottom: 2px solid #204A87; margin-bottom: 10px;"></div>

            <!-- Texte -->
            <div style="width: 80%; margin: 10px auto; font-size: 14px; font-weight: bold; color: #204A87; font-family: Garamond; line-height: 1.2;">
                <span style="display: block; text-align: center;">
                    Pour votre santé, suivez rigoureusement les prescriptions et respectez les <br/>
                    consignes pour une récupération optimale
                </span>
            </div>
        </div>


    </template>
</odoo>