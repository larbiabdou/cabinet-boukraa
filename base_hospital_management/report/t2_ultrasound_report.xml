<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_obstetric_follow_up_t2" model="ir.actions.report">
        <field name="name">COMPTE RENDU D’ECHOGRAPHIE DU T2</field>
        <field name="model">obstetric.follow.up</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">base_hospital_management.report_obstetric_follow_up_t2</field>
        <field name="report_file">base_hospital_management.report_obstetric_follow_up_t2</field>
        <field name="binding_model_id" ref="model_obstetric_follow_up"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="base_hospital_management.paperformat_medical_prescription"/>
    </record>
    <template id="report_obstetric_follow_up_t2">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="doc">
                    <div class="page" style="position: relative; width: 100%; height: 100%;">

                        <!-- Adding background image -->


                        <!-- Content of the report here -->
                        <div style="position: relative; z-index: 10;">
                            <t t-set="firstname" t-value="doc.patient_id.firstname"/>
                            <t t-set="lastname" t-value="doc.patient_id.lastname"/>
                            <t t-set="age" t-value="doc.patient_id.age_str"/>
                            <t t-set="date" t-if="doc.date_2nd_trimester" t-value="doc.date_2nd_trimester.strftime('%d/%m/%Y')"/>
                            <t t-call="base_hospital_management.template_header_a5"/>
                            <br/>
                            <div class="text-center" style="font-weight:900;font-size: 24px">
                                COMPTE RENDU D’ECHOGRAPHIE DU T2
                            </div>
                            <br/>
                            <br/>
                            <div style="font-size:16px">
                                <div class="row col-12" style="margin-bottom: 10px">
                                    <div class="col-6">
                                        <p>
                                            <strong>G :</strong>
                                            <t t-esc="doc.g_1"/> &#160;&#160;&#160; &#160;&#160;&#160;
                                            <strong>P :</strong>
                                            <t t-esc="doc.p_1"/>
                                            <br/>
                                            <strong>C :</strong>
                                            <span t-field="doc.c_1"/> &#160;&#160;&#160; &#160;&#160;&#160;
                                            <strong>A :</strong>
                                            <span t-field="doc.a_1"/> &#160;&#160;&#160; &#160;&#160;&#160;
                                        </p>

                                        <!-- Affichage des dates DDR et DPR -->
                                        <p>
                                            <strong>DDR:</strong>
                                            <t t-esc="doc.ddr.strftime('%d/%m/%Y') if doc.ddr else ''"/> &#160;&#160;&#160;&#160;&#160;&#160;
                                            <strong>DPA:</strong>
                                            <t t-esc="doc.dpr.strftime('%d/%m/%Y') if doc.dpr else ''"/>
                                        </p>
                                        <p>
                                            <strong>Grossesse :</strong>
                                            <span t-field="doc.grossesse_2"/>
                                        </p>
                                        <br/>
                                        <p>Biométrie :</p>
                                        <p>
                                            <strong>AC</strong> &#160;&#160;
                                            <t t-esc="dict(doc._fields['ac_2'].selection).get(doc.ac_2)"/>
                                            &#160;&#160;&#160;&#160;&#160;&#160;

                                            <strong>MAF</strong> &#160;&#160;
                                            <t t-esc="dict(doc._fields['maf_2'].selection).get(doc.maf_2)"/>
                                        </p>
                                        <p>
                                            <strong>BIP:</strong>
                                            <span t-field="doc.bip_2"/> &#160;&#160;&#160; &#160;&#160;&#160;
                                            <strong>FEMUR:</strong>
                                            <span t-field="doc.femur_2"/>
                                        </p>
                                        <p>
                                            <strong>POIDS:</strong>
                                            <span t-field="doc.poids_2"/>
                                        </p>
                                    </div>
                                    <div class="col-6">
                                        <p>Morphologie :</p>
                                         <p>

                                            <strong>FACE</strong> &#160;&#160;
                                            <t t-esc="dict(doc._fields['face_2'].selection).get(doc.face_2)"/>
                                            &#160;&#160;&#160;&#160;&#160;&#160;

                                            <strong>Cœur et vx</strong> &#160;&#160;
                                            <t t-esc="dict(doc._fields['hearth_2'].selection).get(doc.hearth_2)"/>
                                        </p>
                                        <p>
                                            <strong>Nez-Bouche</strong> &#160;&#160;
                                            <t t-esc="dict(doc._fields['nez_bouche_2'].selection).get(doc.nez_bouche_2)"/>
                                        </p>
                                        <p>


                                            <strong>Estomac</strong> &#160;&#160;
                                            <t t-esc="dict(doc._fields['estomac_2'].selection).get(doc.estomac_2)"/>
                                            &#160;&#160;&#160;&#160;&#160;&#160;

                                            <strong>Membres</strong> &#160;&#160;
                                            <t t-esc="dict(doc._fields['membres_2'].selection).get(doc.membres_2)"/>
                                        </p>
                                        <p>


                                            <strong>Rachis</strong> &#160;&#160;
                                            <t t-esc="dict(doc._fields['rachis_2'].selection).get(doc.rachis_2)"/>
                                            &#160;&#160;&#160;&#160;&#160;&#160;

                                            <strong>Reins et vessie</strong> &#160;&#160;
                                            <t t-esc="dict(doc._fields['reins_2'].selection).get(doc.reins_2)"/>
                                        </p>
                                        <p>

                                            <strong>Liquide amniotique</strong> &#160;&#160;
                                            <t t-esc="dict(doc._fields['liquide_amni_2'].selection).get(doc.liquide_amni_2)"/>
                                            &#160;&#160;&#160;&#160;&#160;&#160;

                                            <strong>Placenta</strong> &#160;&#160;
                                            <t t-esc="dict(doc._fields['placenta_2'].selection).get(doc.placenta_2)"/>
                                        </p>
                                    </div>
                                </div>

                                <p>
                                    <strong>Présentation:</strong>
                                    <t t-esc="doc.presentation_2"/>
                                </p>

                                <p>
                                    <strong>Conclusion:</strong>
                                    <t t-esc="doc.conclusion_2"/>
                                </p>
                            </div>
                            <t t-call="base_hospital_management.template_footer_a5"/>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>