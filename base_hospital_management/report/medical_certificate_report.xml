<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========== RAPPORT CERTIFICAT MÉDICAL ========== -->

    <record id="action_medical_certificate_report" model="ir.actions.report">
        <field name="name">Certificat médical</field>
        <field name="model">medical.certificate</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">base_hospital_management.report_medical_certificate</field>
        <field name="report_file">base_hospital_management.report_medical_certificate</field>
        <field name="print_report_name">'Certificat médical - %s' % (object.patient_id.name if object.patient_id else
            (object.firstname + ' ' + object.lastname))
        </field>
        <field name="binding_model_id" ref="model_medical_certificate"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="base_hospital_management.paperformat_medical_prescription"/>

    </record>

    <template id="report_medical_certificate">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="doc">
                    <div class="page" style="position: relative; width: 100%; height: 100%;">

                        <!-- Adding background image -->
                        <div style="position: absolute; top: 250px; left: 0; width: 100%; height: 400px;
                        background-image: url('/base_hospital_management/static/img/new-img-removebg-preview.png');
                        background-size: cover; background-repeat: no-repeat; opacity: 0.2;">
                        </div>

                        <!-- Content of the report here -->
                        <div style="position: relative; z-index: 10;">
                            <t t-set="date" t-value="doc.date.strftime('%d/%m/%Y')"/>
                            <t t-call="base_hospital_management.template_header_a5"/>
                            <br/>
                            <div class="text-center" style="font-weight:900;font-size: 24px">
                                Certificat médical
                            </div>

                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <br/>

                            <div style="font-size:18px">
                                <t t-raw="doc.content"/>
                            </div>

                            <t t-call="base_hospital_management.template_footer_a5"/>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>